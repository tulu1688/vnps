<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Styles -->

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="android:background">@color/common_app_red_color</item>
    </style>

    <style name="CommonEditTextLightGray">
        <item name="android:textColor">#999999</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">@dimen/size_very_small</item>
        <item name="android:paddingBottom">@dimen/size_very_small</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CommonEditTextDarkGray">
        <item name="android:textColor">#333333</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/size_very_small</item>
        <item name="android:paddingBottom">@dimen/size_very_small</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CommonRedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/size_very_small</item>
        <item name="android:paddingBottom">@dimen/size_very_small</item>
        <item name="android:background">@drawable/common_red_button</item>
    </style>

    <!-- Circle layout -->
    <declare-styleable name="CircleLayout">
        <attr name="innerRadius" format="dimension" />
        <attr name="sliceDivider" format="reference|color" />
        <attr name="innerCircle" format="reference|color" />
        <attr name="angleOffset" format="float" />
        <attr name="angleRange" format="float" />
        <attr name="layoutMode">
            <enum name="normal" value="1" />
            <enum name="pie" value="2" />
        </attr>
        <attr name="dividerWidth" format="dimension" />
    </declare-styleable>

    <style name="Animations" />

</resources>